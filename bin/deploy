#!/usr/bin/env -S bash -eo pipefail

deploy-home() {
    cp -alviu fs/home/bryan/. "$HOME"
}

deploy() {
    local dir="$1"
    sudo cp -alviu "fs/$dir/." "/$dir"
}

main() {
    local kernel=$(uname -s)
    echo "Kernel: ${kernel}"
    set -u

    case "$kernel" in
        "Linux")
            local dist=$(lsb_release -is)
            echo "Distribution: ${dist}"
            case "$dist" in
                "Ubuntu")
                    deploy usr
                    deploy etc
                    deploy-home
                    ;;
                "Raspbian")
                    deploy-home
                    ;;
                *)
                    echo "Operating system not supported: ${dist}"
                    exit 1
                    ;;
            esac
            ;;

        "Darwin")
            deploy-home
            ;;

        *)
            echo "Kernel not supported: ${kernel}"
            exit 1
    esac
}

if [ "$(whoami)" == "root" ]; then
    echo "this program should not be run as root."
    exit 1
fi

main "$1"
