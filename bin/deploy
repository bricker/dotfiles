#!/usr/bin/env -S bash -eo pipefail

deploy-home() {
    cp -alviu fs/home/bryan/. "$HOME"
}

deploy() {
    local dir="$1"
    sudo cp -alviu "fs/$dir/." "/$dir"
}

main() {
    local platform="$1"
    set -u

    case $platform in
        "ubuntu")
            deploy usr
            deploy etc
            deploy-home
            ;;
        "pi")
            deploy-home
            ;;
        "darwin")
            deploy-home
            ;;
        *)
            echo "Usage: deploy [PLATFORM]"
            echo "  Supported platforms: ubuntu, pi, darwin"
            exit 0
            ;;

    esac
}

if [ "$(whoami)" == "root" ]; then
    echo "this program should not be run as root."
    exit 1
fi

main "$1"
